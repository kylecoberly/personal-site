          </div>
        </div>
        <div id="resume-background-cover">&nbsp;</div>
      </section>
      <script>
        (function() {
          let resume;
          let windowHeight;
          const $animatedElements = document.querySelectorAll(".to-animate")

          function init() {
            resume = document.querySelector("#resume");
            windowHeight = window.innerHeight;
          }

          function checkPosition() {
              let positionFromTop = resume.getBoundingClientRect().top;

              if (positionFromTop - windowHeight <= 0) {
                triggerAnimation()
              }
          }

          function triggerAnimation(){
            $animatedElements.forEach($animatedElement => {
              $animatedElement.classList.add("in-view");
            })
          }

          window.addEventListener("scroll", checkPosition);
          window.addEventListener("resize", init);

          init();
          checkPosition();
        })();
      </script>
